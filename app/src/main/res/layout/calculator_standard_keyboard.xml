<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:clipToPadding="false"
    android:paddingStart="11dp"
    android:paddingEnd="11dp"
    android:paddingBottom="5dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_1"
        style="@style/calculator_large_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        app:buttonText="1"
        app:inputText="1"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_2"
        style="@style/calculator_large_white"
        app:buttonText="2"
        app:inputText="2"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_3"
        style="@style/calculator_large_white"
        app:buttonText="3"
        app:inputText="3"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_4"
        style="@style/calculator_large_white"
        app:buttonText="4"
        app:inputText="4"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_5"
        style="@style/calculator_large_white"
        app:buttonText="5"
        app:inputText="5"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_6"
        style="@style/calculator_large_white"
        app:buttonText="6"
        app:inputText="6"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_7"
        style="@style/calculator_large_white"
        app:buttonText="7"
        app:inputText="7"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_8"
        style="@style/calculator_large_white"
        app:buttonText="8"
        app:inputText="8"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_9"
        style="@style/calculator_large_white"
        app:buttonText="9"
        app:inputText="9"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_0"
        style="@style/calculator_large_white"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:buttonText="0"
        app:inputText="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/number_2"
        app:layout_constraintStart_toStartOf="@+id/number_1"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/number_point"
        style="@style/calculator_large_white"
        app:buttonText="."
        app:inputText="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/operator_add"
        style="@style/calculator_large_gray"
        app:buttonText="+"
        app:inputText="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/operator_sub"
        style="@style/calculator_large_gray"
        app:buttonText="-"
        app:inputText="-"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/operator_div"
        style="@style/calculator_large_gray"
        app:buttonText="รท"
        app:inputText="/"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/operator_mulit"
        style="@style/calculator_large_gray"
        app:buttonText="x"
        app:inputText="*"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/input_delete"
        style="@style/calculator_large_gray"
        app:buttonImage="@drawable/cal_delete"
        app:inputText="["
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline5" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/input_clean"
        style="@style/calculator_large_gray"
        app:buttonText="C"
        app:inputText="]"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />

    <com.icarus.calculator.customView.CalculatorInputButton
        android:id="@+id/operator_equals"
        style="@style/calculator_large_yellow"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:buttonText="="
        app:inputText="="
        app:layout_constraintBottom_toBottomOf="@+id/operator_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/operator_sub"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>